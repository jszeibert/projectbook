{
	"name": "jszeibert/projectbook",
    "description": "An app to document and share your private projects",
    "type": "project",
    "license": "AGPL",
    "authors": [
        {
            "name": "Johannes Szeibert",
            "email": "johannes@szeibert.de"
        }
    ],
    "require": {},
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "nextcloud/coding-standard": "^0.5.0"
    },
	"config": {
		"optimize-autoloader": true,
		"classmap-authoritative": true,
		"platform": {
			"php": "7.3"
		}
	},
	"scripts": {
		"cs:fix": "php-cs-fixer fix",
		"cs:check": "php-cs-fixer fix --dry-run --diff",
		"lint": "find . -name \\*.php -not -path './vendor/*' -exec php -l \"{}\" \\;"
	}
}
